    </collision>
  </link>

  <joint name="base_center_wheel_joint" type="continuous">
    <parent link="base" />
    <child link="center_wheel" />
    <origin xyz="-0.10 0.0 0.0" rpy="1.57079632679 0.0 0.0" />

    <axis xyz="0 0.0 1.0" />
    <limit effort = "10" velocity = "10" />
  </joint>



